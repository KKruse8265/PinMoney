<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:fillViewport="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_name_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/konto"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner4Child"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/rahmen_1"
            android:entries="@array/array_name"
            android:textAlignment="center"/>

    </LinearLayout>

    <Button
        android:id="@+id/button_konto"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30pt"
        android:background="@drawable/button_main_parent_konto" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="(Aktueller Kontostand des oben gewählten Empfänger)"
        android:textColor="#636363"
        android:textAlignment="center"
        android:textSize="12sp"
        android:ems="10"
        android:id="@+id/explainCount" />

    <Button
        android:id="@+id/button_auszahlung"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20pt"
        android:background="@drawable/button_main_parent_ausz" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="(Auszahlung an oben gewählten Empfänger)"
        android:textColor="#636363"
        android:textAlignment="center"
        android:textSize="12sp"
        android:ems="10"
        android:id="@+id/bookingOut" />

    <Button
        android:id="@+id/button_einzahlung"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20pt"
        android:background="@drawable/button_main_parent_einz" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="(Einzahlung auf Konto des oben gewählten Empfänger)"
        android:textColor="#636363"
        android:textAlignment="center"
        android:textSize="12sp"
        android:ems="10"
        android:id="@+id/bookingIn" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:text="@string/datum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idate"
        android:layout_weight="1"/>

    <TextView
        android:text="@string/buchungstext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibuchungstext"
        android:layout_weight="1"/>

    <TextView
        android:text="@string/verifikation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iveryfikation"
        android:layout_weight="1"/>

    <TextView
        android:text="@string/betrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibetrag"
        android:layout_weight="1"/>

    <TextView
        android:text="@string/summe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/isumme"
        android:layout_weight="1"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_name"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="@string/empfaenger_vorname"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/input_name"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/title_name" />

    <TextView
        android:id="@+id/title_name2"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/title_name"
        android:text="@string/empfaenger_vorname"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/input_name2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/input_name"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/title_name2" />

    <TextView
        android:id="@+id/title_name3"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@+id/title_name2"
        android:text="@string/empfaenger_vorname"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/input_name3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/input_name2"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/title_name3" />

</RelativeLayout>
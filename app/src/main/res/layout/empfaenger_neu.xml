<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empfaenger_neu"
            android:id="@+id/empfaenger_neu"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/empfaenger_vorname"
            android:textSize="16sp"
            android:id="@+id/title_name" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/title_name"
            android:id="@+id/input_name"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/empfaenger_neu_geb_dat"
            android:textSize="16sp"
            android:id="@+id/title_birthday" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:id="@+id/input_birthday"
            android:inputType="date" />
            <!--android:layout_weight="1" />-->

    </LinearLayout>

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/rythm"-->
        <!--android:id="@+id/rythm"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="30px"-->
        <!--android:textSize="22dp"-->
        <!--android:textStyle="bold"-->
        <!--android:textAlignment="center"/>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginStart="10dp"
            android:id="@+id/radioButton_dayli" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_dayli"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:id="@+id/title_dayli" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginStart="10dp"
            android:id="@+id/radioButton_weekly" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_weekly"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:id="@+id/title_weekly" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginStart="10dp"
            android:id="@+id/radioButton_monthly" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_monthly"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:id="@+id/title_monthly" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/tg_betrag"
            android:textSize="16dp"
            android:id="@+id/title_count" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="15px"
            android:textAlignment="textEnd"
            android:id="@+id/input_count"
            android:inputType="numberDecimal" />
            <!--android:layout_weight="1" />-->

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="@string/euro"
            android:textSize="16dp"
            android:id="@+id/euro" />
    </LinearLayout>

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/preference"-->
        <!--android:id="@+id/peference"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="30px"-->
        <!--android:textSize="22dp"-->
        <!--android:textStyle="bold"-->
        <!--android:textAlignment="center"/>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/start_count"
            android:textSize="16dp"
            android:id="@+id/title_money_start" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginRight="15px"
            android:textAlignment="textEnd"
            android:id="@+id/input_money_start"
            android:inputType="numberDecimal" />
            <!--android:layout_weight="1" />-->

        <TextView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="@string/euro"
            android:textSize="16dp"
            android:id="@+id/euro1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/start_date"
            android:textSize="16dp"
            android:id="@+id/title_startDate" />

        <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginRight="15px"
            android:id="@+id/input_startDate"
            android:inputType="date" />
            <!--android:layout_weight="1" />-->

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="@string/title_mobile"
            android:id="@+id/title_mobile" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="100px"
            android:id="@+id/radioButton_yes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:textSize="16dp"
            android:text="@string/mobile_yes"
            android:id="@+id/title_mobile_yes" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80px"
            android:text=""
            android:id="@+id/radioButton_no" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="16sp"
            android:text="@string/mobile_no"
            android:id="@+id/title_mobile_no" />
    </LinearLayout>

    <Button
        android:layout_width="200px"
        android:layout_height="50px"
        android:background="@drawable/button_save"
        android:id="@+id/button_save_new_child"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15pt"
        android:enabled="true"  />

    </LinearLayout>
</ScrollView>
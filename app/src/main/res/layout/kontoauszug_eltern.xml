<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_actual_count"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50px"
                android:text="Aktuell:"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/show_actual_count"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textAlignment="textEnd" />
            <!--android:layout_weight="1" />-->

            <TextView
                android:id="@+id/euro"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="€"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/title_startDate"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50px"
                android:text="von Datum:"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/input_fromDate"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:inputType="date" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_endDate"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50px"
                android:text="bis Datum:"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/input_toDate"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:inputType="date" />
        </LinearLayout>

        <ListView
            android:layout_width="match_parent"
            android:layout_marginTop="50px"
            android:layout_height="320dp"
            android:id="@+id/listView" />

        <Button
            android:layout_width="500px"
            android:layout_height="wrap_content"
            android:text="Schließen"
            android:id="@+id/close_konto_eltrn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px"
            android:enabled="true" />

    </LinearLayout>


</ScrollView>
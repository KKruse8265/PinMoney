<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@mipmap/background"

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_actual_count_kind"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginLeft="50px"
                android:text="@string/title_actual_count"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/show_actual_count_kind"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textAlignment="textEnd"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/euro_kind"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:text="@string/euro"
                android:textStyle="bold"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_weight="0.12">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="25dp"
                android:id="@+id/radioButton_10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/days_10"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:id="@+id/title_10" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:id="@+id/radioButton_30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/days_30"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:id="@+id/title_30" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:id="@+id/radioButton_60" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/days_60"
                android:layout_marginLeft="5dp"
                android:textSize="14dp"
                android:id="@+id/title_60" />
        </LinearLayout>

        <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50px"
            android:layout_weight="0.40" />

    </LinearLayout>


</ScrollView>
